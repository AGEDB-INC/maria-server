let $datadir=`select @@datadir`;

--echo #
--echo # Start of 10.4 tests
--echo #

--echo #
--echo # MDEV-28727 ALTER TABLE ALGORITHM=NOCOPY does not work after upgrade
--echo #

--echo #
--echo # The original 10.1.4 MyISAM table does not support INSTANT and NOCOPY.
--echo # CHECK TABLE FOR UPGRADE doesn't report that upgrade is needed.
--echo # The table is not really broken!
--echo # Just the index on DOUBLE is a bit inefficient.
--echo #

copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.frm $datadir/test/mdev28727_100104_myisam.frm;
copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.MYD $datadir/test/mdev28727_100104_myisam.MYD;
copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.MYI $datadir/test/mdev28727_100104_myisam.MYI;
SHOW CREATE TABLE mdev28727_100104_myisam;
CHECK TABLE mdev28727_100104_myisam FOR UPGRADE;
--error ER_ALTER_OPERATION_NOT_SUPPORTED
ALTER TABLE mdev28727_100104_myisam MODIFY d DOUBLE DEFAULT 10, ALGORITHM=INSTANT;
--error ER_ALTER_OPERATION_NOT_SUPPORTED
ALTER TABLE mdev28727_100104_myisam MODIFY d DOUBLE DEFAULT 10, ALGORITHM=NOCOPY;
DROP TABLE mdev28727_100104_myisam;

--echo #
--echo # REPAIR TABLE does not change anything, INSTANT and NOCOPY still do not work.
--echo # Again, the table is not really broken!
--echo # Just the index on DOUBLE is a bit inefficient.
--echo #

copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.frm $datadir/test/mdev28727_100104_myisam.frm;
copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.MYD $datadir/test/mdev28727_100104_myisam.MYD;
copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.MYI $datadir/test/mdev28727_100104_myisam.MYI;
REPAIR TABLE mdev28727_100104_myisam;
--error ER_ALTER_OPERATION_NOT_SUPPORTED
ALTER TABLE mdev28727_100104_myisam MODIFY d DOUBLE DEFAULT 10, ALGORITHM=INSTANT;
--error ER_ALTER_OPERATION_NOT_SUPPORTED
ALTER TABLE mdev28727_100104_myisam MODIFY d DOUBLE DEFAULT 10, ALGORITHM=NOCOPY;
DROP TABLE mdev28727_100104_myisam;

--echo #
--echo # ALTER TABLE FORCE rebuilds the table. INSTANT now works.
--echo #

copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.frm $datadir/test/mdev28727_100104_myisam.frm;
copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.MYD $datadir/test/mdev28727_100104_myisam.MYD;
copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.MYI $datadir/test/mdev28727_100104_myisam.MYI;
ALTER TABLE mdev28727_100104_myisam FORCE;
ALTER TABLE mdev28727_100104_myisam MODIFY d DOUBLE DEFAULT 10, ALGORITHM=INSTANT;
DROP TABLE mdev28727_100104_myisam;

--echo #
--echo # ALTER TABLE FORCE rebuilds the table. NOCOPY now works.
--echo #

copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.frm $datadir/test/mdev28727_100104_myisam.frm;
copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.MYD $datadir/test/mdev28727_100104_myisam.MYD;
copy_file std_data/mysql_upgrade/mdev28727_100104_myisam.MYI $datadir/test/mdev28727_100104_myisam.MYI;
ALTER TABLE mdev28727_100104_myisam FORCE;
ALTER TABLE mdev28727_100104_myisam MODIFY d DOUBLE DEFAULT 10, ALGORITHM=NOCOPY;
DROP TABLE mdev28727_100104_myisam;

--echo #
--echo # End of 10.4 tests
--echo #
